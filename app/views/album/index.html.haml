%main
  .post
    .post-title
      %h1 Albums
  .container-fluid
    .row#mas
      - @albums.each do |a|
        .col-sm-4.col-md-3.no-gutter
          .imgbox
            = image_tag a.photos.shuffle.first.resource.url, class: 'img img-responsive'
            .album-title
              %p= a.name



